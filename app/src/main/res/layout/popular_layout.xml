<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="148sp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="11sp"
        android:backgroundTint="#edede9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="1sp"
                android:orientation="vertical">


            <TextView
                android:id="@+id/popular_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veg Extravaganza"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#293241"
                android:layout_marginTop="8sp"
                android:layout_marginLeft="13sp"
                android:textSize="15sp"
                />


            <TextView
                android:id="@+id/popular_description"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13sp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Black olives, capsicum, onion, grilled mushroom, corn, tomato, jalapeno and extra cheese."
                android:textSize="11sp" />


             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="4sp"
                 android:orientation="horizontal">

            <TextView
                android:id="@+id/rupee_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textColor="#293241"
                android:layout_marginTop="7sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginLeft="10sp"
                />

            <TextView
                android:id="@+id/rupee_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="559"
                android:textColor="#293241"
                android:layout_marginTop="7sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginLeft="2sp"/>

            <ImageView
                android:id="@+id/star_icon"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="9sp"
                android:src="@drawable/ratings"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:layout_marginTop="7sp"
                android:textColor="#293241"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginLeft="3sp"/>

            <Button
                android:id="@+id/addToCartPopularButton"
                android:layout_width="wrap_content"
                android:layout_height="34sp"
                android:text="Add to cart"
                android:textSize="10sp"
                android:padding="2pt"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginLeft="20sp"
                android:textAllCaps="false"
                android:layout_marginTop="1pt"
                android:backgroundTint="#B4EBCA"
                android:background="@drawable/add_to_cart_round_drawable"
                android:layout_alignParentBottom="true"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/popular_image"
            android:layout_width="95sp"
            android:layout_height="95sp"
            android:layout_marginRight="20sp"
            android:adjustViewBounds="true"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="-3sp"
            android:src="@drawable/extravaganza"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>