<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".signupActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginLeft="50pt"
        android:layout_marginTop="30sp"
        app:srcCompat="@drawable/welcome"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textSize="32dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#293241"
        android:layout_marginLeft="60pt"/>


    <EditText
        android:id="@+id/enterName"
        android:layout_width="303sp"
        android:layout_height="45dp"
        android:background="@drawable/edittext_round_shape"
        android:layout_marginLeft="15pt"
        android:layout_marginTop="25sp"
        android:hint="Name"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:drawableStart="@drawable/baseline_person_outline_24"
        android:paddingStart="10dp"
        android:drawablePadding="12dp"/>

    <EditText
        android:id="@+id/enterEmail"
        android:layout_width="303sp"
        android:layout_height="45dp"
        android:background="@drawable/edittext_round_shape"
        android:layout_marginLeft="15pt"
        android:layout_marginTop="25dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:drawableStart="@drawable/baseline_mail_outline_24"
        android:paddingStart="10dp"
        android:drawablePadding="12dp"/>

    <EditText
        android:id="@+id/enterContact"
        android:layout_width="303sp"
        android:layout_height="45dp"
        android:background="@drawable/edittext_round_shape"
        android:layout_marginLeft="15pt"
        android:layout_marginTop="25dp"
        android:hint="contact no."
        android:inputType="number"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:drawableStart="@drawable/outline_phone_24"
        android:paddingStart="10dp"
        android:drawablePadding="12dp"/>

    <EditText
        android:id="@+id/enterPassword"
        android:layout_width="303sp"
        android:layout_height="45dp"
        android:background="@drawable/edittext_round_shape"
        android:layout_marginLeft="15pt"
        android:layout_marginTop="25dp"
        android:hint="password"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:drawableStart="@drawable/baseline_lock_open_24"
        android:paddingStart="10dp"
        android:drawablePadding="12dp"/>

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textAllCaps="false"
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:background="@drawable/button_round_shape"
        android:backgroundTint="#B4EBCA"
        android:textColor="#293241"
        android:textSize="19dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ?"
            android:textStyle="bold"
            android:textColor="#6c757d"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="28pt"
            android:layout_marginTop="20dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/login_btntxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#74d3ae"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>




</LinearLayout>