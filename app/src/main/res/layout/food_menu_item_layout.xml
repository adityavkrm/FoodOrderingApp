<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90pt"
        android:backgroundTint="@color/lightbrown"
        app:cardCornerRadius="15sp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/foodMenuImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#C3F10E0E"
            android:layout_width="65pt"
            android:layout_height="60pt"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bkchickendoublepattyburger"/>


         <TextView
             android:id="@+id/foodMenuTitle"
             android:layout_toRightOf="@id/foodMenuImage"
             android:layout_marginLeft="4pt"
             android:layout_marginTop="5pt"
             android:textSize="15sp"
             android:layout_width="209sp"
             android:layout_height="wrap_content"
             android:text="Chicken Double Patty Burger"
             android:fontFamily="@font/poppins_bold"
             android:textColor="@color/black"/>

            <TextView
                android:id="@+id/foodMenuDescription"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/foodMenuImage"
                android:text="Chicken Double Patty ,Garden Fresh Crispy Lettuce, Tomato and Our Signature Sauce."
                android:layout_below="@id/foodMenuTitle"
                android:layout_marginLeft="4pt"
                android:layout_marginRight="3pt"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="11sp"/>

            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/ratingsImage"
                android:layout_width="8pt"
                android:layout_height="8pt"
                android:src="@drawable/ratings"
                android:layout_toRightOf="@id/foodMenuImage"
                android:layout_marginLeft="4pt"
                android:layout_marginBottom="6.5pt"
                android:layout_marginTop="7pt"/>


            <TextView
                android:id="@+id/foodMenuRating"
                android:layout_marginBottom="3pt"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/ratingsImage"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14sp"
                android:layout_marginTop="6.5pt"
                android:layout_marginLeft="1pt"/>

            <TextView
                android:layout_marginBottom="3pt"
                android:layout_alignParentBottom="true"
                android:id="@+id/foodMenuRupeesIGN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/foodMenuRating"
                android:layout_marginTop="6.5pt"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginLeft="5pt"/>

            <TextView
                android:layout_marginBottom="3pt"
                android:layout_alignParentBottom="true"
                android:id="@+id/foodMenuCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="179"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/foodMenuRating"
                android:layout_marginTop="6.5pt"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginLeft="10pt"/>

                <Button
                    android:layout_marginBottom="4pt"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/foodMenuAddToCartButton"
                    android:layout_width="wrap_content"
                    android:layout_height="37sp"
                    android:text="Add  +"
                    android:fontFamily="@font/poppins_bold"
                    android:backgroundTint="@color/foodyGreen"
                    android:background="@drawable/menu_add_to_cart_button"
                    android:layout_marginTop="2pt"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10sp"/>











        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

